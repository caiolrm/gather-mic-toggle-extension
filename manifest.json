{
    "name": "Gather Mic Toggle",
    "description": "Mic Toggle on gather.town",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "permissions": ["https://gather.town/app/*"],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://gather.town/app/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "commands": {
        "toggle": {
            "suggested_key": {
                "default": "Ctrl+Q",
                "mac": "Command+Q"
            },
            "description": "Mute/unmute",
            "global": true
        }
    },
    "browser_action": {
        "default_icon": "assets/icon.png",
        "default_popup": "popup.html"
    }
}